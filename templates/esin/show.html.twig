{% extends 'base.html.twig' %}

{% block title %}Détail du signalement e-sin{% endblock %}

{% block body %}

    <h1 class = "titreListe">Détail du signalement e-sin</h1>
    <a class="btn btn-info" href="{{ path('esin_index') }}">Retour</a>
    
    <table class="table table-hover">

        <tr>
            <th>Identifiant de la fiche</th>
            <td>{{ esin.identifiantDeLaFiche }}</td>
        </tr>
        <tr>
            <th>Emission de la fiche</th>
            <td>{{ esin.emissionDeLaFiche ? esin.emissionDeLaFiche|date('d-m-Y') : '' }}</td>
        </tr>
        <tr>
            <th>Date de dernière modification de la fiche</th>
            <td>{{esin.dateDerniereModif ? esin.dateDerniereModif|date('d-m-Y') : '' }}</td>
        </tr>
        <tr>
            <th>Code Finess</th>
            <td>{{ esin.codeFinessEtab }}</td>
        </tr>
        <tr>
            <th>Episode précédent</th>
            <td>{{ esin.episodePrecedent ? esin.episodePrecedent|date('d-m-Y') : '' }}</td>
        </tr>
        <tr>
            <th>Envoi au CNR</th>
            <td>{{ esin.envoiAuCnr }}</td>
        </tr>
        <tr>
            <th>Nom du CNR ou du labo</th>
            <td>{{ esin.nomCnrOuLabo }}</td>
        </tr>
        <tr>
            <th>Nombres de cas</th>
            <td>{{ esin.nbCas }}</td>
        </tr>
        <tr>
            <th>Epidemies ou cas groupés</th>
            <td>{{ esin.epidemieCasGroupes }}</td>
        </tr>
        <tr>
            <th>Caractère nosocomial</th>
            <td>{{ esin.caractereNosocomial }}</td>
        </tr>
        <tr>
            <th>Origine des cas importés</th>
            <td>{{ esin.origineCasImportes }}</td>
        </tr>
        <tr>
            <th>Nombres d'établissements concernés</th>
            <td>{{ esin.etabConcernes }}</td>
        </tr>
        <tr>
            <th>Texte libre établissements concernés</th>
            <td>{{ esin.autresEtabs }}</td>
        </tr>
        <tr>
            <th>Code micro-organisme 1</th>
            <td>{{ esin.codeMicroOrganisme1 }}</td>
        </tr>
        <tr>
            <th>Code micro-organisme 2</th>
            <td>{{ esin.codeMicroOrganisme2 }}</td>
        </tr>
        <tr>
            <th>Code micro-organisme 3</th>
            <td>{{ esin.codeMicroOrganisme3 }}</td>
        </tr>
        <tr>
            <th>Code site 1</th>
            <td>{{ esin.codeSiteUn }}</td>
        </tr>
        <tr>
            <th>Code site 2</th>
            <td>{{ esin.codeSiteDeux }}</td>
        </tr>
        <tr>
            <th>Code site 3</th>
            <td>{{ esin.codeSiteTrois }}</td>
        </tr>
        <tr>
            <th>Investigation</th>
            <td>{{ esin.investigation }}</td>
        </tr>
        <tr>
            <th>Hypothèse de la cause</th>
            <td>{{ esin.hypotheseCause }}</td>
        </tr>
        <tr>
            <th>Justification</th>
            <td>{{ esin.justification }}</td>
        </tr>
        <tr>
            <th>Praticien hygiéniste</th>
            <td>{{ esin.praticienHygiene }}</td>
        </tr>
    </table>
{% endblock %}
